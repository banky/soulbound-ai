// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Token {
  owner       String  @id
  name        String
  imagePath   String?
  imageUrl    String?
  description String
}

model ImageModel {
  owner   String          @id
  state   ImageModelState
  s3Urls  String[]
  modelId String?
}

model Order {
  id        Int      @id @default(autoincrement())
  owner     String
  orderId   String
  imageUrls String[]
  ready     Boolean
  prompt    String
  createdAt DateTime @default(now())
}

enum ImageModelState {
  NEEDS_IMAGES
  NEEDS_TRAINING
  IS_TRAINING
  READY
}
